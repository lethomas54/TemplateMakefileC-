########################################################################################
#----------------------------------EXEC_NAME-------------------------------------------#
########################################################################################

NAME		:=

########################################################################################
#-------------------------------COMPILER_OPTION----------------------------------------#
########################################################################################

COMP		:=	c++
CFLAGS		:=	-Wall -Wextra -Werror -pedantic -std=c++98

########################################################################################
#------------------------------SOURCE+OBJECT_FILE--------------------------------------#
########################################################################################

SRC			:=

SRCPATH		:=	./
SRCS		:=	$(addprefix $(SRCPATH), $(SRC))
OBJ 		:=	$(SRCS:.cpp=.o)

########################################################################################
#---------------------------------HEADER_FILE------------------------------------------#
########################################################################################

INC			:=

INCPATH		:=	./
INCS		:=	$(addprefix $(INCPATH), $(INC))

########################################################################################
#-----------------------------------COLOR_VAR------------------------------------------#
########################################################################################

GREEN		:=	\033[0;32m
RED 		:=	\033[0;31m
RED_BOLD 	:=	\033[1;31m
BLUE_BOLD	:=	\033[1;34m
WHITE 		:=	\033[0;0m

########################################################################################
#-------------------------------------MAKEFILE_RULE------------------------------------#
########################################################################################

all: $(NAME)

$(NAME): $(OBJ)
	@$(COMP) $(CFLAGS) $(OBJ) -o $@
	@echo "$(BLUE_BOLD)$(NAME) compilation: $(GREEN)OK$(WHITE)"

%.o: %.cpp $(INCS)
	@$(COMP) $(CFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJ)
	@echo "$(RED_BOLD)$(NAME) clean: $(GREEN)OK$(WHITE)"

fclean:
	@rm -f $(OBJ) $(NAME)
	@echo "$(RED_BOLD)$(NAME) fclean: $(GREEN)OK$(WHITE)"

re: fclean all

.PHONY: all clean fclean re
